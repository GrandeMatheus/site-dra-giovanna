---
import "../styles/global.css";
---

<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dra. Giovanna Paulo | Médica Pediatra</title>
    <meta
      name="description"
      content="Atendimento pediátrico humanizado com foco no desenvolvimento saudável do seu filho. Agende sua consulta com a Dra. Giovanna Paulo."
    />
    <meta property="og:image" content="/assets/og-image.jpg" />
    <link rel="icon" href="/assets/favicon.ico" />
  </head>

  <body class="text-brand-moss font-outfit selection:bg-brand-pink/40">
    <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-syncopate tracking-wide text-brand-moss">
        Dra. Giovanna Paulo
      </h1>
      <nav>
        <ul class="flex gap-6 text-sm font-medium">
          <li>
            <a href="/" class="hover:text-brand-pink transition">Início</a>
          </li>
          <li>
            <a href="/sobre" class="hover:text-brand-pink transition">Sobre</a>
          </li>
          <li>
            <a href="/especialidades" class="hover:text-brand-pink transition"
              >Especialidades</a
            >
          </li>
          <li>
            <a href="/contato" class="hover:text-brand-pink transition"
              >Contato</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </body>

  <main class="max-w-6xl mx-auto px-6 py-12">
    <slot />
  </main>

  <footer class="bg-brand-moss text-white py-6">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <p class="text-sm">
        &copy; {new Date().getFullYear()} Dra. Giovanna Paulo · Todos os direitos
        reservados.
      </p>
    </div>
  </footer>
</html>
